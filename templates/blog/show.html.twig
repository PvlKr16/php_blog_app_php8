{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <div class="container-fluid mt-4" style="padding-bottom: 120px;"> {# –û—Ç—Å—Ç—É–ø –¥–ª—è fixed —Ñ–æ—Ä–º—ã #}

        {# ====== –ó–ê–ì–û–õ–û–í–û–ö –ë–õ–û–ì–ê ====== #}
        <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
            {# –õ–µ–≤–∞—è —á–∞—Å—Ç—å #}
            <div class="d-flex align-items-center gap-3">
                <h2 class="mb-0">{{ blog.title }}</h2>
                <button class="btn btn-outline-secondary btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#participantsModal">
                    <i class="bi bi-people"></i> –£—á–∞—Å—Ç–Ω–∏–∫–∏
                </button>
            </div>

            {# –ü—Ä–∞–≤–∞—è —á–∞—Å—Ç—å #}
            <div class="d-flex align-items-center gap-3">
            <span class="text-muted">
                <i class="bi bi-person-circle"></i> {{ blog.author.username }}
            </span>
                <span class="text-muted">
                {{ blog.createdAt|date('d M') }}
            </span>
                <div class="dropdown">
                    <button class="btn btn-link text-dark p-0"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <i class="bi bi-three-dots-vertical fs-5"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% if app.user == blog.author %}
                            <li>
                                <a class="dropdown-item" href="{{ path('blog_edit', {'id': blog.id}) }}">
                                    <i class="bi bi-pencil"></i> –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å
                                </a>
                            </li>
                        {% endif %}
                        <li>
                            <a class="dropdown-item copy-link" href="#" data-url="{{ url('blog_show', {'id': blog.id}) }}">
                                <i class="bi bi-link-45deg"></i> –°–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å —Å—Å—ã–ª–∫—É
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        {# ====== –ö–û–ù–¢–ï–ù–¢ –ë–õ–û–ì–ê ====== #}
        <div class="mb-4">
            {% if blog.content %}
                <div class="mb-3">{{ blog.content|nl2br }}</div>
            {% endif %}

            {# –í–ª–æ–∂–µ–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã –±–ª–æ–≥–∞ #}
            {% if attachments|length > 0 %}
                <div class="mb-3">
                    <h6 class="text-muted mb-2">–§–∞–π–ª—ã:</h6>
                    {% for attachment in attachments %}
                        <div class="d-inline-block me-2 mb-2">
                            <a href="/uploads/attachments/{{ attachment.filename }}"
                               class="btn btn-sm btn-outline-secondary"
                               target="_blank">
                                üìé {{ attachment.originalFilename }}
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        {# ====== –°–ü–ò–°–û–ö –ó–ê–ü–ò–°–ï–ô ====== #}
        <div id="posts-container">
            {% for item in posts %}
                {% set post = item.post %}
                {% set postAttachments = item.attachments %}
                <div class="card mb-3 post-item" data-post-id="{{ post.id }}">
                    {# –ó–∞–≥–æ–ª–æ–≤–æ–∫ –∑–∞–ø–∏—Å–∏ #}
                    <div class="card-header d-flex justify-content-between align-items-center bg-white">
                        <div class="d-flex align-items-center gap-2">
                            {% if post.author.avatar %}
                                <img src="/uploads/avatars/{{ post.author.avatar }}"
                                     class="rounded-circle"
                                     style="width: 32px; height: 32px; object-fit: cover;">
                            {% else %}
                                <i class="bi bi-person-circle fs-4"></i>
                            {% endif %}
                            <strong>{{ post.author.username }}</strong>
                        </div>

                        <div class="d-flex align-items-center gap-3">
                        <span class="text-muted small">
                            {{ post.createdAt|date('d M H:i') }}
                        </span>
                            <div class="dropdown">
                                <button class="btn btn-link text-dark p-0"
                                        type="button"
                                        data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    {% if app.user == post.author %}
                                        <li>
                                            <a class="dropdown-item" href="{{ path('post_edit', {'id': post.id}) }}">
                                                <i class="bi bi-pencil"></i> –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å
                                            </a>
                                        </li>
                                    {% endif %}
                                    <li>
                                        <a class="dropdown-item copy-link" href="#" data-url="{{ url('post_show', {'id': post.id}) }}">
                                            <i class="bi bi-link-45deg"></i> –°–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å —Å—Å—ã–ª–∫—É
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    {# –ö–æ–Ω—Ç–µ–Ω—Ç –∑–∞–ø–∏—Å–∏ #}
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.content|nl2br }}</p>

                        {# –§–∞–π–ª—ã –∑–∞–ø–∏—Å–∏ #}
                        {% if postAttachments|length > 0 %}
                            <div class="mt-3">
                                <h6 class="text-muted mb-2">–§–∞–π–ª—ã:</h6>
                                {% for attachment in postAttachments %}
                                    <div class="d-inline-block me-2 mb-2">
                                        <a href="/uploads/attachments/{{ attachment.filename }}"
                                           class="btn btn-sm btn-outline-secondary"
                                           target="_blank">
                                            üìé {{ attachment.originalFilename }}
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% else %}
                <p class="text-muted text-center py-4">–ó–∞–ø–∏—Å–µ–π –ø–æ–∫–∞ –Ω–µ—Ç. –î–æ–±–∞–≤—å—Ç–µ –ø–µ—Ä–≤—É—é –∑–∞–ø–∏—Å—å!</p>
            {% endfor %}
        </div>
    </div>

    {# ====== MODAL: –£–ß–ê–°–¢–ù–ò–ö–ò ====== #}
    <div class="modal fade" id="participantsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">–£—á–∞—Å—Ç–Ω–∏–∫–∏ –±–ª–æ–≥–∞ ({{ blog.participants|length }})</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="list-group mb-3">
                        {% for participant in blog.participants %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-2">
                                    {% if participant.avatar %}
                                        <img src="/uploads/avatars/{{ participant.avatar }}"
                                             class="rounded-circle"
                                             style="width: 40px; height: 40px; object-fit: cover;">
                                    {% else %}
                                        <i class="bi bi-person-circle fs-3"></i>
                                    {% endif %}
                                    <div>
                                        <strong>{{ participant.username }}</strong>
                                        {% if participant == blog.author %}
                                            <span class="badge bg-primary ms-2">–ê–≤—Ç–æ—Ä</span>
                                        {% endif %}
                                    </div>
                                </div>

                                {% if app.user == participant and participant != blog.author %}
                                    <form method="post"
                                          action="{{ path('blog_remove_participant', {'blogId': blog.id, 'userId': participant.id}) }}"
                                          style="display: inline;">
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ –ø–æ–∫–∏–Ω—É—Ç—å –±–ª–æ–≥?')">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>

                    <a href="{{ path('blog_add_participant', {'id': blog.id}) }}"
                       class="btn btn-primary w-100">
                        <i class="bi bi-plus-lg"></i> –î–æ–±–∞–≤–∏—Ç—å —É—á–∞—Å—Ç–Ω–∏–∫–∞
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# ====== FIXED –§–û–†–ú–ê –î–û–ë–ê–í–õ–ï–ù–ò–Ø –ó–ê–ü–ò–°–ò ====== #}
    <div class="fixed-bottom bg-white border-top shadow-lg p-3 post-form-container">
        <div class="container-fluid">
            <form id="new-post-form" class="d-flex align-items-center gap-2">
                <input type="text"
                       id="post-content-input"
                       class="form-control"
                       placeholder="–î–æ–±–∞–≤–∏—Ç—å –∑–∞–ø–∏—Å—å..."
                       autocomplete="off">

                <button type="button"
                        id="send-button"
                        class="btn btn-primary rounded-circle send-post-btn"
                        style="display: none;">
                    <i class="bi bi-play-fill"></i>
                </button>

                <div class="dropdown">
                    <button class="btn btn-outline-secondary rounded-circle add-post-btn"
                            type="button"
                            data-bs-toggle="dropdown">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item open-file-upload" href="#">
                                <i class="bi bi-paperclip"></i> –§–∞–π–ª
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item text-muted disabled-menu-item" href="#">
                                <i class="bi bi-bar-chart"></i> –û–ø—Ä–æ—Å
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item text-muted disabled-menu-item" href="#">
                                <i class="bi bi-type-h1"></i> –ó–∞–≥–æ–ª–æ–≤–æ–∫
                            </a>
                        </li>
                    </ul>
                </div>

                <input type="file"
                       id="post-file-input"
                       name="attachments[]"
                       multiple
                       style="display: none;">
            </form>

            <div id="selected-files" class="mt-2" style="display: none;">
                <small class="text-muted">–í—ã–±—Ä–∞–Ω–æ —Ñ–∞–π–ª–æ–≤: <span id="file-count">0</span></small>
            </div>
        </div>
    </div>

    {# Toast –¥–ª—è "–°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ!" #}
    <div class="position-fixed bottom-0 end-0 p-3 toast-container-custom">
        <div id="copyToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill"></i> –°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <script>
        // –ü–µ—Ä–µ–¥–∞—ë–º –¥–∞–Ω–Ω—ã–µ –≤ JS
        window.blogShowData = {
            blogId: '{{ blog.id }}',
            currentUserId: '{{ app.user ? app.user.id : '' }}'
        };
    </script>
{% endblock %}