{% extends 'base.html.twig' %}

{% block title %}Создать блог{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Создать новый блог</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.content) }}
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Создать</button>
                        <a href="{{ path('blog_list') }}" class="btn btn-secondary">Отмена</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
