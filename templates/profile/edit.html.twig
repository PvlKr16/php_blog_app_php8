{% extends 'base.html.twig' %}

{% block title %}Редактировать профиль{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Редактировать профиль</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'id': 'profile-form'}}) }}

                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}

                    <hr>

                    <div class="mb-3">
                        <label class="form-label">Текущий аватар</label>
                        <div>
                            {% if user.avatar %}
                                <img src="/uploads/avatars/{{ user.avatar }}" alt="Avatar" class="current-avatar-preview" id="currentAvatar">
                                <button type="button" class="btn btn-sm btn-danger" onclick="if(confirm('Удалить аватар?')) { window.location.href='{{ path('profile_avatar_delete') }}'; }">
                                    Удалить аватар
                                </button>
                            {% else %}
                                <p class="text-muted">Аватар не установлен</p>
                            {% endif %}
                        </div>
                    </div>

                    {{ include('_partials/avatar_upload_zone.html.twig', {'form': form}) }}

                    <hr>

                    {{ form_row(form.birthDate) }}
                    {{ form_row(form.address) }}
                    {{ form_row(form.about) }}

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                        <a href="{{ path('profile_view') }}" class="btn btn-secondary">Отмена</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}